            </TableRow>

            <!--ĐÈN-->
            <TableRow
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/colorRow2"
                >

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:text="@string/den"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TỔNG-->
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvtongden_edit"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colortong"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


                <!--BÌNH THƯỜNG-->
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvthemden_edit"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/colorbinhthuong"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--giam-->
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvgiamden_edit"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/colorhu"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btncapnhat_edit"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/capnhat"
            android:textColor="#fff"
            android:background="@drawable/custom_button_baocaothietbikhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>