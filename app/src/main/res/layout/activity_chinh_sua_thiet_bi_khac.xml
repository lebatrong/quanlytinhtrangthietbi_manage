                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/colorhu"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <!--SWITCH MẠNG-->
            <TableRow
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@color/colorRow2"
                >

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:text="@string/switchmang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--TỔNG-->
                <TextView
                    android:id="@+id/tvtongswitchmang_edit"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colortong"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


                <!--BÌNH THƯỜNG-->
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvthemswitchmang_edit"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/colorbinhthuong"
                    android:text="+"
